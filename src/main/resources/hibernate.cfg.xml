<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.EmbeddedDriver</property>
        <property name="hibernate.connection.url">
            jdbc:derby:/home/alex/IdeaProjects/shop/src/main/resources/shop.db;create=true
        </property>
        <property name="hibernate.dialect">org.hibernate.dialect.DerbyTenSevenDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.rustedbrain.model.User"/>
        <mapping class="com.rustedbrain.model.Clock"/>
        <mapping class="com.rustedbrain.model.Accessory"/>
    </session-factory>
</hibernate-configuration>